<!--注文履歴一覧（トップ）ページ-->

<div class ="container">
  <div class ="row">
    <h5 class="my-5">
      <span class ="p-2 text-light" style="background-color: #A5408B;">
        <strong>注文履歴一覧</strong>
      </span>
    </h5>
  </div>

    <div class ="row">
      <div class = "col">
        <table class ="table">
          <thead>
            <tr class ="p-2 text-light" style="background-color: #A5408B;">
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td>
                  <%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"),admin_order_path(order), style: "color: #5EBFDA;" %>
                </td>
                <td><%= order.name %></td>
                <td>
                  <%#= 数量 %>
                  <%= order.get_total_amount %>
                </td>
                <td><%#= 注文ステータス %><%= order.status_i18n %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>