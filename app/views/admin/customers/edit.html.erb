<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5"><%= @customer.full_name %>さんの会員情報編集</h4>

      <%= form_with model: [:admin, @customer] do |f| %>
        <div class="row my-2">
          <div class="col-3 offset-md-1"><h4>会員ID</h4></div>
          <div class="col-3"><%= @customer.id %></div>
        </div>
        
        <div class="row my-2">
          <div class="col-2 offset-md-1"><%= f.label "名前" %></div>
          <div class="col-1 text-right pr-0"><%= f.label "(姓)" %></div>
          <div class="col-1"><%= f.text_field :last_name, :size => "10", autofocus: true %></div>
          <div class="col-1 text-right pr-0"><%= f.label "(名)" %></div>
          <div class="col-1"><%= f.text_field :first_name, :size => "10", autofocus: true %></div>
        </div>
    
        <div class="row my-2">
          <div class="col-2 offset-md-1"><%= f.label "フリガナ" %></div>
          <div class="col-1 text-right pr-0"><%= f.label "(セイ)" %></div>
          <div class="col-1"><%= f.text_field :last_name_kana, :size => "10", autofocus: true %></div>
          <div class="col-1 text-right pr-0"><%= f.label "(メイ)" %></div>
          <div class="col-1"><%= f.text_field :first_name_kana, :size => "10", autofocus: true %></div>
        </div>
    
        <div class="row my-2">
          <div class="col-3 offset-md-1"><%= f.label "メールアドレス" %></div>
          <div class="col-3"><%= f.email_field :email, :size => "31", autofocus: true, autocomplete: "email" %></div>
        </div>
    
        <div class="row my-2">
          <div class="col-3 offset-md-1"><%= f.label "郵便番号(ハイフンなし)" %></div>
          <div class="col-3"><%= f.text_field :postal_code, :size => "31", autofocus: true %></div>
        </div>
      
        <div class="row my-2">
          <div class="col-3 offset-md-1"><%= f.label "住所" %></div>
          <div class="col-3"><%= f.text_field :address, :size => "31", autofocus: true %></div>
        </div>
        
        <div class="row my-2">
          <div class="col-3 offset-md-1"><%= f.label "電話番号(ハイフンなし)" %></div>
          <div class="col-3"><%= f.text_field :phone_number, :size => "31", autofocus: true %></div>
        </div>
          
        <div class="row my-2">
          <div class="col-3 offset-md-1"><h4>会員ステータス</h4></div>
          <div class="col-3">
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "有効", { value: :true }  %>
                
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "退会", { value: :false } %>
          </div>
        </div>

        <div class="row my-2">
          <div class="col-3 offset-md-1"><%= f.submit "変更を保存", class:"btn btn-success" %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>