<div class='container my-5'>
  <div class='row mb-5 d-flex'>
    <h4>
      <span class="p-2 text-light" style="background-color: #A5408B;">ジャンル追加・一覧</span>
    </h4>
  </div>
</div>

<div class="row">
  <div class="col-sm-10 mx-5 mt-3">
    <%= form_with(model: @genre, url: admin_genres_path, class: 'form-group') do |f| %>
      <%= f.label :name, "ジャンル名" %>
      <%= f.text_field :name, placeholder: 'ジャンル名' %>
      <%= f.submit "新規登録", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-lg-4 mx-5 mt-3 text-center mb-5">
    <table class="table table-striped">
      <thead>
        <tr class="text-center">
          <th>ジャンル名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>