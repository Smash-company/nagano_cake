<div class='container my-5'>
  <div class='row mb-5 d-flex'>
   <h4>
      <span class="p-2 text-light" style="background-color: #A5408B;">ジャンル編集</span>
    </h4>
  </div>
</div>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: @genre, url: admin_genre_path(@genre), method: :patch, class: 'form-group') do |f| %>
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name, placeholder: 'ジャンル名を入力してください' %>
        <%= f.submit "変更を保存", class: 'btn btn-success ml-4 py-1' %>
      <% end %>
    </div>
  </div>