<div class="row">
    <table class="table table-hover">
      <thead>
        <tr style="background-color: #A5408B;">
          <th class="active text-center"><h5 class="genre_said text-light" ><strong>ジャンル検索</strong></h5></th>
        </tr>
      </thead>
      <tbody>
        <% genres.each do |genre| %>
          <tr>
            <td class="underline"><strong><%= link_to genre.name, items_path(genre_id: genre.id), method: :get, style: "color: #5EBFDA;" %></strong></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
