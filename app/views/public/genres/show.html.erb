<div class="container mt-5 pt-4">
  <div class="row">
    <div class="col-12 col-lg-3">
      <%= render '/public/shared/sidebar', genres: @genres %>
    </div>

    <div class="col-sx-12 col-lg-9 my-5">

      <div class="row mx-3">
          <li class="mr-2 list-unstyled">
            <h2><strong><%= @genre.name %>一覧</strong></h2>
          </li>
          <li class="d-flex align-items-end list-unstyled">
            <h5>(全<%= @item_count %>件)</h5>
          </li>
      </div>

      <div class="row my-5">
        <% @items.each do |item| %>
          <div class="col my-3">
            <%= link_to item_path(item), class: "text-decoration-none text-dark" do %>
              <%= image_tag item.get_image(100, 100) %>
              <br>
              <b class="item_name my-3" style="color: #5EBFDA;"><%= item.name %></b>
              <p><strong>￥<%= item.price.to_s(:delimited) %></strong></p>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="row mt-4 justify-content-center">
        <%= paginate @genre_items %>
      </div>

    </div>
  </div>
</div>