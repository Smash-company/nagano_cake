<div class="container">
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>マイページ</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3 px-sm-0 offset-sm-1">
      <h4><strong>登録情報</strong></h4>
    </div>
  
    <div class="col-sm-4 px-sm-0">
      <%= link_to "編集する", customers_information_edit_path(current_customer.id), class: "btn btn-success px-4 mb-2" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 px-sm-0 offset-sm-1 my-3">
      <table class="mx-3 my-2">
        <tr>
          <th>氏名</th>
          <th><%= @customer.last_name %>  <%= @customer.first_name %></th>
        </tr>

        <tr>
          <th>カナ</th>
          <th><%= @customer.last_name_kana %>  <%= @customer.first_name_kana %></th>
        </tr>

        <tr>
          <th>郵便番号</th>
          <th><%= @customer.postal_code %></th>
        </tr>

        <tr>
          <th>住所</th>
          <th><%= @customer.address %></th>
        </tr>

        <tr>
          <th>電話番号</th>
          <th><%= @customer.phone_number %></th>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <th><%= @customer.email %></th>
        </tr>
      </table>

      <div style="margin-bottom :10px;"><strong style="margin-right :25px;">発送先</strong><%= link_to '一覧を見る', addresses_path, class: 'btn btn-info' %></div>
      <div><storong style="margin-right :10px; font-weight: bold;">注文履歴</storong><%= link_to '一覧を見る', orders_path, class: 'btn btn-info' %></div>
    </div>
  </div>
</div>