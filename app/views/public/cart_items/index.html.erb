<h1>ショッピングカート</h1>

<%= link_to "カートを空にする", cart_items_destroy_all_path ,  method: :delete , "data-confirm" => "商品を削除しますか？" , class: "btn btn-danger mx-3 ml-auto"%>

<table class="table table-bordered">
  <tr class="table-active">
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
    <th><br></th>
  </tr>

  <% total = 0 %>
  <% @cart_item.each do |cart_item| %>
    <tr>
      <td>
        <%= image_tag cart_item.item.get_image(50, 50) %>
        <%= cart_item.item.name %>
      </td>
      <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
      <td>
        <%= form_with model:cart_item, url: cart_item_path(cart_item) , local:true, method: :patch do |f| %>
          <%= f.number_field :amount, min: 1, max:10, id: "amount_cart" %>
          <%= f.submit "変更", class: "btn-sm btn-success" %>
        <% end %>
      </td>
      <td><%= cart_item.subtotal.to_s(:delimited) %></td>
      <td><%= link_to "削除する", cart_items_path(cart_item.id), method: :delete, "data-confirm" => "商品を削除しますか？" , class: "btn-sm btn-danger" %></td>
    </tr>
  <% total += cart_item.subtotal %>
  <% end %>
</table>

<div class = "row d-flex">
  <div class ="button col-2">
    <%= link_to "買い物を続ける", root_path, class: "btn btn-info" %>
  </div>
</div>

<table class="table table-bordered">
  <tr>
    <td>合計金額</td>
    <td><%= total.to_s(:delimited) %></td>
  </tr>
</table>

<div class = "row">
  <div class = "button mx-auto">
    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
  </div>
</div>
