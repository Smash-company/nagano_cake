<h2>Sign up</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana %>
    <%= f.text_field :last_name_kana, autofocus: true %>
    <%= f.label :first_name_kana %>
    <%= f.text_field :first_name_kana, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
  <%= f.label :postal_code %>
  <%= f.text_field :postal_code, autofocus: true %>
  </div>

  <div class="field">
  <%= f.label :address %>
  <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
  <%= f.label :phone_number %>
  <%= f.text_field :phone_number, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="btn-wrapper col-10 mx-auto">
    <div class="actions">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  </div>
<% end %>

<h2>すでに登録済みの方</h2>
<p>
  <%= link_to "こちら", customer_session_path %> からログインしてください。
</p>

<%= render "public/shared/links" %>
