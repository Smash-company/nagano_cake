<div class="col-2 offset-md-1 my-5">
  <h3>ログイン</h3>
</div>

<%= form_with model: @customer, url: customer_session_path do |f| %>

  <div class="col-6 offset-md-1 my-5">
    <h4>会員の方はこちらからログイン</h4>
  </div>

  <div class="row my-2">
    <div class="col-3 offset-md-1"><%= f.label "メールアドレス" %></div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="row my-2">
    <div class="col-3 offset-md-1"><%= f.label "パスワード" %></div>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="row my-2">
    <div class="col-2 offset-md-1 mt-3 mb-5">
      <%= f.submit "ログイン", class: "btn btn-success" %>
    </div>
  </div>
<% end %>

<%= render "public/shared/links" %>