<header>
  <nav>
    <div>
      <nav>
        <div>
          <a href="<%= root_path %>">
            <%= link_to root_path do %>
              <%= image_tag "logo.png" %>
            <% end %>
          </a>
        </div>
      </nav>
      
      <button type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
        <span></span>
      </button>

      <div id="navbarSupportedContent">
        <ul>

          <!-- カスタマーがログインしている時 -->
          <% if customer_signed_in? %>
            <li>ようこそ、<%= current_customer.last_name + current_customer.first_name %>さん！</li>
            <li><%= link_to "マイページ", my_page_path %></li>
            <li><%= link_to "商品一覧", items_path %></li>
            <li><%= link_to "カート", cart_items_path %></li>
            <li><%= link_to "About", about_path %></li>
            <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete %></li>

          <!-- 管理者がログインしている時 -->
          <% elsif admin_signed_in? %>
            <li><%= link_to "商品一覧", admin_items_path %></li>
            <li><%= link_to "会員一覧", admin_customers_path %></li>
            <li><%= link_to "注文履歴一覧", admin_root_path %></li>
            <li><%= link_to "ジャンル一覧", admin_genres_path %></li>
            <li><%= link_to "About", about_path %></li>
            <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>

          <!-- ログインしていない時 -->
          <% else %>
            <li><%= link_to "商品一覧", items_path %></li>
            <li><%= link_to "新規登録", new_customer_registration_path %></li>
            <li><%= link_to "About", about_path %></li>
            <li><%= link_to "ログイン", new_customer_session_path %></li>
          <% end %>

        </ul>
      </div>
    </div>
  </nav>
</header>


